    {
      "name": "Python: Attach",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost"
    },
    {
      "name": "main (External Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "pythonPath": "${workspaceFolder}/venv/Scripts/python",
      "console": "externalTerminal"
    }
  ]
