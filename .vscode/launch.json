    {
      "name": "main (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "pythonPath": "${workspaceFolder}/venv/Scripts/python",
      "console": "integratedTerminal"
